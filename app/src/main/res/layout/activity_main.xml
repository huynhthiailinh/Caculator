<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        android:textAlignment="textEnd"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:textColor="@color/teal_700"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral80"
                android:minHeight="90dp"
                android:onClick="onClickInputButton"
                android:text="7"
                android:textColor="@color/purple_700"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral80"
                android:minHeight="90dp"
                android:onClick="onClickInputButton"
                android:text="8"
                android:textColor="@color/purple_700"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral80"
                android:minHeight="90dp"
                android:onClick="onClickInputButton"
                android:text="9"
                android:textColor="@color/purple_700"
                android:textSize="24sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral60"
                android:minHeight="90dp"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral60"
                android:minHeight="90dp"
                android:text="->"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral80"
                android:minHeight="90dp"
                android:onClick="onClickInputButton"
                android:text="4"
                android:textColor="@color/purple_700"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral80"
                android:minHeight="90dp"
                android:onClick="onClickInputButton"
                android:text="5"
                android:textColor="@color/purple_700"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral80"
                android:minHeight="90dp"
                android:onClick="onClickInputButton"
                android:text="6"
                android:textColor="@color/purple_700"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral40"
                android:minHeight="90dp"
                android:onClick="onClickInputButton"
                android:text="*"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_neutral40"
                android:minHeight="90dp"
                android:onClick="onClickInputButton"
                android:text="/"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/material_dynamic_neutral80"
                        android:minHeight="90dp"
                        android:onClick="onClickInputButton"
                        android:text="1"
                        android:textColor="@color/purple_700"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/material_dynamic_neutral80"
                        android:minHeight="90dp"
                        android:onClick="onClickInputButton"
                        android:text="2"
                        android:textColor="@color/purple_700"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/material_dynamic_neutral80"
                        android:minHeight="90dp"
                        android:onClick="onClickInputButton"
                        android:text="3"
                        android:textColor="@color/purple_700"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/material_dynamic_neutral40"
                        android:minHeight="90dp"
                        android:onClick="onClickInputButton"
                        android:text="-"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btnC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/design_default_color_error"
                        android:minHeight="90dp"
                        android:onClick="onClickClearButton"
                        android:text="C"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/material_dynamic_neutral80"
                        android:minHeight="90dp"
                        android:onClick="onClickInputButton"
                        android:text="0"
                        android:textColor="@color/purple_700"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/material_dynamic_neutral80"
                        android:minHeight="90dp"
                        android:onClick="onClickInputButton"
                        android:text="."
                        android:textColor="@color/purple_700"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/material_dynamic_neutral40"
                        android:minHeight="90dp"
                        android:onClick="onClickInputButton"
                        android:text="+"
                        android:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_700"
                android:minHeight="180dp"
                android:onClick="onClickEqualButton"
                android:text="="
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>